{"components/products/options/set-radio":"<div class=\"form-input-select\">\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\" id=\"radio-group-label-{{id}}\">\n        Available in {{ this.display_name }}:\n    </label>\n    <div class=\"form-field\" data-product-attribute=\"set-radio\" role=\"radiogroup\" aria-labelledby=\"radio-group-label-{{id}}\">\n\n        {{#unless required}}\n            <input\n                class=\"form-radio\"\n                type=\"radio\"\n                id=\"attribute_radio_{{id}}_none\"\n                name=\"attribute[{{id}}]\"\n                value=\"\"\n                checked=\"{{#if defaultValue '==' ''}}checked{{/if}}\"\n            >\n            <label class=\"form-label\" for=\"attribute_radio_{{id}}_none\">{{lang 'products.none'}}</label>\n        {{/unless}}\n        <div class=\"radio-option-container\">\n            {{#each this.values}}\n                <div class=\"option-value\">\n                    <input\n                        class=\"form-radio\"\n                        type=\"radio\"\n                        id=\"attribute_radio_{{../id}}_{{id}}\"\n                        name=\"attribute[{{../id}}]\"\n                        value=\"{{id}}\"\n                        {{#if selected}}\n                            checked\n                            data-default\n                        {{/if}}\n                        {{#if ../required}}required{{/if}}>\n                    <label data-product-attribute-value=\"{{id}}\" class=\"form-label\" for=\"attribute_radio_{{../id}}_{{id}}\">{{this.label}}</label>\n                </div>\n            {{/each}}\n        </div>\n    </div>\n    <select class=\"form-select\">\n        <option value=\"\">{{lang 'products.choose_options'}}</option>\n        {{#each this.values}}\n            <option value=\"{{id}}\">{{label}}</option>\n        {{/each}}\n    </select>\n</div>\n<script>\n    document.querySelector('.form-input-select .form-select').addEventListener('change', function() {\n        document.querySelector('.form-input-select .form-field input[value=\"' + this.value + '\"]').click()\n    });\n</script>\n\n"}
